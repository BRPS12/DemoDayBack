// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(nanoid()) @map("_id")
  email       String @unique
  password    String
  image       String
  name        String
  age         String
  phoneNumber String
  role        String
}

model Institute {
  id              String @id @default(nanoid()) @map("_id")
  name            String
  category        String
  image           String
  review          String
  description     String
  backGroundImage String
  specialCode     String
}
